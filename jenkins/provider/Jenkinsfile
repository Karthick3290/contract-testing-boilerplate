pipeline {
   agent any

   stages {
      stage('checkout') {
         steps {
            checkout([$class: 'GitSCM', branches: [[name: '*/master']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[url: 'https://github.com/saikrishna321/contract-testing-boilerplate']]])
         }
      }
      
      stage('Npm Install') {
         steps {
             sh 'npm install'
        }
      }
      
      stage('Start Provider service') {
         steps {
             sh 'npm run provider-service'
        } 
        
      }
      
      stage('Run Provider Verifier and Publish to Pact broker') {
         steps {
             sh 'npm run provider-service'
        } 
        
      }
      
      stage('Publish Consumer Pact to Pact Broker') {
         steps {
             sh 'npm run provider-pact-broker'
        }
      }
   }
   
   
}
